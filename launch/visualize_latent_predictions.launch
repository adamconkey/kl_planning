<?xml version="1.0"?>
<launch>

  <arg name="h5"/>
  <arg name="checkpoint" default=""/>
  <arg name="cpu"        default="false"/>
  <arg name="start_idx"  default="0"/>
  <arg name="rate"       default="30"/>

  <!-- ======================================================================================= -->
  
  <include file="$(find ll4ma_robots_description)/launch/panda_rviz.launch">
    <arg name="launch_rviz" value="true"/>
    <arg name="rviz_config"
         value="$(find kl_planning)/config/rviz/visualize_latent_predictions.rviz"/>
    <arg name="use_jsp"     value="false"/>
  </include>

  <node name="visualize_latent_predictions" pkg="kl_planning" type="visualize_latent_predictions.py"
	output="screen">
    <param name="h5"         value="$(arg h5)"/>
    <param name="checkpoint" value="$(arg checkpoint)"/>
    <param name="cpu"        value="$(arg cpu)"/>
    <param name="start_idx"  value="$(arg start_idx)"/>
    <param name="rate"       value="$(arg rate)"/>
  </node>
  
</launch>
